<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">


    <TextView
        android:id="@+id/textDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="#A4A4A4"
        android:text="Sun" />
    <ImageView
        android:id="@+id/dayWeather"
        android:layout_below="@id/textDay"
        android:padding="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_weather_few_clouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textTemp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dayWeather"
        android:textSize="20sp"
        android:paddingLeft="22dp"
        android:textColor="#303F9F"
        android:text="1°" />
    <TextView
        android:id="@+id/textTemp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTemp1"
        android:textSize="20sp"
        android:paddingLeft="22dp"
        android:textColor="#A4A4A4"
        android:text="1°" />

</RelativeLayout>
